<plugin>

   <extension
         id="cardroom-hud.product"
         point="org.eclipse.core.runtime.products">
      <product
            name="fr.mikrethor.cardroom.hud"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="applicationCSS"
               value="platform:/plugin/cardroom-hud/css/default.css">
         </property>
      </product>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="cardroom-hud">
         <property
               name="appName"
               value="cardroom-hud">
         </property>
      </product>
   </extension>

</plugin>
